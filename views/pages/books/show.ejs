<% books.forEach(book=> { %>
    <li>
        <div>
            <div><img class="li-div" src="<%= book.img_url %>" alt=""></div>
            <h3>
                <%= book.title %>
            </h3>
            <h3>
                <%= book.author %>
            </h3>
            <p>description: <%= book.description %>
            </p>
            <% if (typeof apiReturn !="undefined" ) {%>
                <form action="/books" method="POST">
                    <input type="hidden" name="isbn" value="<%= book.isbn %>">
                    <input type="hidden" name="title" value="<%= book.title %>">
                    <input type="hidden" name="author" value="<%= book.author %>">
                    <input type="hidden" name="description" value="<%= book.description %>">
                    <input type="hidden" name="img_url" value="<%= book.img_url %>">
                    <input type="hidden" name="bookShealf" value="<%= book.bookShealf %>">
                    <input type="submit" value="Save and view details">
                </form>
                <% } else if (typeof apiDetail !="undefined" ) {%>
                    <p>isbn: <%= book.isbn %>
                    </p>
                    <p>BookShealf: <%= book.bookShealf %>
                    </p>
                    <div>
                        <form action="/books/<%= book.id %>/update">
                            <input type="submit" value="update book" />
                        </form>
                        <form action="/books/<%= book.id %>?_method=DELETE" method="POST">
                            <input type="submit" value="delete book" />
                        </form>
                    </div>
                    <% } else {%>
                        <form action="/books/<%= book.id %>">
                            <input type="submit" value="View Details" />
                        </form>
                        <% } %>
        </div>
    </li>
    <% }) %>